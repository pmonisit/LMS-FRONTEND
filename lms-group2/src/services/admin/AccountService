import http from "../http";

export function fetchAccount() {
  return http.get("/account/all");
}

export function fetchAccountById(id) {
  return http.get(`/account/${id}`);
}

export function addAccount(account) {
  const accountClone = { ...account };
  Object.keys(account).forEach((key) => {
    if (
      account[key] === "" ||
      account[key] === null ||
      account[key] === "undefined"
    ) {
      delete accountClone[key];
    }
  });
  return http.post("/account/admin/register", accountClone);
}
